<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/spacing_md"
    android:background="@color/brand_background">

    <!-- ðŸ”¶ App Bar reutilizable con logo -->
    <include
        android:id="@+id/includeToolbar"
        layout="@layout/include_app_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ðŸ”¹ TÃ­tulo de pantalla (debajo de la toolbar) -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/screen_title"
        android:textSize="@dimen/text_xl"
        android:textStyle="bold"
        android:textColor="@color/brand_text_primary"
        app:layout_constraintTop_toBottomOf="@id/includeToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ðŸ”¹ Filtros (LinearLayout horizontal con MaterialButtons) -->
    <LinearLayout
        android:id="@+id/llFilters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/spacing_sm"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFilterAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_all"
            android:layout_marginEnd="@dimen/spacing_xs"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFilterPrint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_print"
            android:layout_marginEnd="@dimen/spacing_xs"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFilterBinding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_binding"/>
    </LinearLayout>

    <!-- ðŸ”¹ Guideline para dividir catÃ¡logo (izq) y carrito (der) -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gdSplit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.55" />

    <!-- ðŸ”¹ Contenedor de CatÃ¡logo -->
    <TextView
        android:id="@+id/tvCatalogTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/catalog_title"
        android:textStyle="bold"
        android:textSize="@dimen/text_lg"
        android:textColor="@color/brand_text_primary"
        app:layout_constraintTop_toBottomOf="@id/llFilters"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/gdSplit"
        android:layout_marginTop="@dimen/spacing_sm"/>

    <ScrollView
        android:id="@+id/svCatalog"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvCatalogTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/gdSplit"
        android:layout_marginEnd="@dimen/spacing_sm">

        <!-- Este LinearLayout recibirÃ¡ items de catÃ¡logo (dinÃ¡micos desde MainActivity) -->
        <LinearLayout
            android:id="@+id/llCatalogContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:dividerPadding="@dimen/spacing_xs"
            android:paddingBottom="@dimen/spacing_lg"/>
    </ScrollView>

    <!-- ðŸ”¹ Panel Carrito -->
    <LinearLayout
        android:id="@+id/panelCart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="@dimen/spacing_sm"
        android:background="@drawable/bg_card"
        app:layout_constraintTop_toBottomOf="@id/llFilters"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/gdSplit"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvCartTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cart_title"
            android:textStyle="bold"
            android:textSize="@dimen/text_lg"
            android:textColor="@color/brand_text_primary" />

        <!-- Contenedor de Ã­tems del carrito (se llena dinÃ¡micamente) -->
        <ScrollView
            android:id="@+id/svCart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:layout_marginTop="@dimen/spacing_sm">

            <LinearLayout
                android:id="@+id/llCartContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
        </ScrollView>

        <!-- Total -->
        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cart_total_placeholder"
            android:textStyle="bold"
            android:textColor="@color/brand_text_primary"
            android:layout_marginTop="@dimen/spacing_sm"/>

        <!-- âœ… BotÃ³n Material corregido -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClearCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cart_clear"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
