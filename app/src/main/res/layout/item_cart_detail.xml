<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/spacing_md"
    android:layout_marginBottom="@dimen/spacing_sm"
    android:background="@drawable/bg_item">

    <!-- FILA SUPERIOR: imagen + textos + qty -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivThumb"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/sample_print_bw"
            android:contentDescription="@string/img_desc" />

        <!-- Título + desc + precios -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="@dimen/spacing_sm">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del producto"
                android:textStyle="bold"
                android:textColor="@color/brand_text_primary"
                android:singleLine="true"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción"
                android:textColor="@color/brand_text_primary"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvUnitPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$ 0 (unitario)"
                android:textColor="@color/brand_text_primary" />

            <!-- TOTAL por ítem -->
            <TextView
                android:id="@+id/tvItemTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total ítem: $ 0"
                android:textStyle="bold"
                android:textColor="@color/brand_text_primary" />
        </LinearLayout>

        <!-- Controles cantidad (más compactos) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/spacing_xs">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMinus"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                android:text="-"
                android:textSize="18sp"
                app:cornerRadius="8dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />

            <TextView
                android:id="@+id/tvQty"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1"
                android:textSize="16sp"
                android:layout_marginHorizontal="@dimen/spacing_xs" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPlus"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                android:text="+"
                android:textSize="18sp"
                app:cornerRadius="8dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- FILA INFERIOR: acciones  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="@dimen/spacing_sm">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDetectFromPdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload_pdf"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/spacing_sm"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlaceOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/place_order"
            android:backgroundTint="@color/brand_green"/>
    </LinearLayout>

</LinearLayout>
